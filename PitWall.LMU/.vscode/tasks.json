{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run PitWall UI + Agent",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"Set-Location \"${workspaceFolder}\"; Start-Process dotnet -ArgumentList 'run --project PitWall.Agent\\PitWall.Agent.csproj'; Start-Process dotnet -ArgumentList 'run --project PitWall.Api\\PitWall.Api.csproj'; Start-Sleep -Seconds 2; dotnet run --project PitWall.UI\\PitWall.UI.csproj"
			],
			"isBackground": false,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "dotnet test (PitWall.LMU)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "test"
		},
		{
			"label": "coverage (PitWall.LMU)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}\\Tools\\RunCoverage.ps1"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "test"
		},
		{
			"label": "open coverage report (PitWall.LMU)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"Start-Process \"${workspaceFolder}\\TestResults\\CoverageReport\\index.html\""
			],
			"isBackground": false
		}
	]
}