<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PitWall.UI.App"
             xmlns:local="using:PitWall.UI"
             xmlns:models="using:PitWall.UI.Models"
             xmlns:converters="using:PitWall.UI.Converters"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <!-- ATLAS Professional Color Palette -->
        <Color x:Key="ColorBackground">#0A0A0A</Color>
        <Color x:Key="ColorPanel">#1A1A1A</Color>
        <Color x:Key="ColorBorder">#2A2A2A</Color>
        <Color x:Key="ColorTextPrimary">#FFFFFF</Color>
        <Color x:Key="ColorTextSecondary">#888888</Color>

        <Color x:Key="ColorSuccess">#00FF41</Color>
        <Color x:Key="ColorWarning">#FFB800</Color>
        <Color x:Key="ColorCritical">#FF0033</Color>
        <Color x:Key="ColorInfo">#00D9FF</Color>

        <SolidColorBrush x:Key="BrushBackground" Color="{DynamicResource ColorBackground}" />
        <SolidColorBrush x:Key="BrushPanel" Color="{DynamicResource ColorPanel}" />
        <SolidColorBrush x:Key="BrushBorder" Color="{DynamicResource ColorBorder}" />
        <SolidColorBrush x:Key="BrushTextPrimary" Color="{DynamicResource ColorTextPrimary}" />
        <SolidColorBrush x:Key="BrushTextSecondary" Color="{DynamicResource ColorTextSecondary}" />
        <SolidColorBrush x:Key="BrushSuccess" Color="{DynamicResource ColorSuccess}" />
        <SolidColorBrush x:Key="BrushWarning" Color="{DynamicResource ColorWarning}" />
        <SolidColorBrush x:Key="BrushCritical" Color="{DynamicResource ColorCritical}" />
        <SolidColorBrush x:Key="BrushInfo" Color="{DynamicResource ColorInfo}" />

        <!-- Value Converters -->
        <models:FuelStatusConverter x:Key="FuelStatusConverter" />
        <models:TireWearConverter x:Key="TireWearConverter" />
        <models:TireTempConverter x:Key="TireTempConverter" />
        <models:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter" />
        
        <!-- ATLAS UI Converters -->
        <converters:BoolToTextConverter x:Key="BoolToTextConverter" />
        <converters:BoolToAlignmentUserConverter x:Key="BoolToAlignmentUserConverter" />
        <converters:BoolToMessageBackgroundConverter x:Key="BoolToMessageBackgroundConverter" />
        <converters:BoolToMessageBorderConverter x:Key="BoolToMessageBorderConverter" />
        <converters:BoolToRoleColorConverter x:Key="BoolToRoleColorConverter" />
        <models:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter" />
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <!-- Window Styles -->
        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource BrushBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource BrushTextPrimary}" />
            <Setter Property="FontFamily" Value="Inter, Segoe UI, Arial" />
        </Style>

        <!-- ATLAS Typography -->
        <Style Selector="TextBlock.giant">
            <Setter Property="FontSize" Value="48" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Cascadia Mono, Consolas, Menlo" />
        </Style>

        <Style Selector="TextBlock.xxxl">
            <Setter Property="FontSize" Value="36" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Cascadia Mono, Consolas, Menlo" />
        </Style>

        <Style Selector="TextBlock.xxl">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Cascadia Mono, Consolas, Menlo" />
        </Style>

        <Style Selector="TextBlock.xl">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{DynamicResource BrushInfo}" />
            <Setter Property="LetterSpacing" Value="1" />
        </Style>

        <Style Selector="TextBlock.data-value">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="Cascadia Mono, Consolas, Menlo" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style Selector="TextBlock.data-label">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{DynamicResource BrushTextSecondary}" />
            <Setter Property="LetterSpacing" Value="0.5" />
        </Style>

        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource BrushTextSecondary}" />
        </Style>

        <Style Selector="TextBlock.value">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Cascadia Mono, Consolas, Menlo" />
        </Style>

        <!-- Panel Styles -->
        <Style Selector="Border.panel">
            <Setter Property="Background" Value="{DynamicResource BrushPanel}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BrushBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16" />
        </Style>

        <Style Selector="Border.atlas-panel">
            <Setter Property="Background" Value="{DynamicResource BrushPanel}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BrushBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Border.atlas-panel:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource BrushInfo}" />
        </Style>

        <!-- Tab Control Styles -->
        <Style Selector="TabControl.atlas-tabs">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="TabControl.atlas-tabs TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Margin" Value="0,0,4,0" />
            <Setter Property="Background" Value="#1A1A1A" />
            <Setter Property="Foreground" Value="{DynamicResource BrushTextSecondary}" />
            <Setter Property="BorderBrush" Value="#2A2A2A" />
            <Setter Property="BorderThickness" Value="1,1,1,0" />
            <Setter Property="CornerRadius" Value="6,6,0,0" />
        </Style>

        <Style Selector="TabControl.atlas-tabs TabItem:selected">
            <Setter Property="Background" Value="{DynamicResource BrushPanel}" />
            <Setter Property="Foreground" Value="{DynamicResource BrushTextPrimary}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BrushInfo}" />
            <Setter Property="BorderThickness" Value="1,2,1,0" />
        </Style>

        <Style Selector="TabControl.atlas-tabs TabItem:pointerover">
            <Setter Property="Background" Value="#222222" />
            <Setter Property="Foreground" Value="{DynamicResource BrushTextPrimary}" />
        </Style>

        <!-- Button Styles -->
        <Style Selector="Button.atlas-button-primary">
            <Setter Property="Background" Value="{DynamicResource BrushInfo}" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- Progress Bar Styles -->
        <Style Selector="ProgressBar.atlas-progress">
            <Setter Property="Height" Value="8" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Background" Value="#2A2A2A" />
            <Setter Property="Foreground" Value="{DynamicResource BrushSuccess}" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

    </Application.Styles>
</Application>